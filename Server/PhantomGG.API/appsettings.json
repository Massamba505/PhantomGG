{
	"Serilog": {
		"Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft.AspNetCore": "Warning",
				"Microsoft.AspNetCore.Hosting": "Warning",
				"Microsoft.AspNetCore.Mvc": "Warning",
				"Microsoft.AspNetCore.Routing": "Warning",
				"System": "Warning",
				"Microsoft": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
				}
			},
			{
				"Name": "Seq",
				"Args": {
					"serverUrl": "http://localhost:5341"
				}
			}
		],
		"Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
		"Properties": {
			"Application": "PhantomGG.API"
		}
	},
	"AllowedHosts": "*",
	"ConnectionStrings": {
		"PhantomDb": "Data Source=.;Initial Catalog=PhantomGG;Integrated Security=True;Trust Server Certificate=True",
		"SeqServerUrl": "http://localhost:5341"
	},
	"JwtSettings": {
		"Issuer": "PhantomGGAPI",
		"Audience": "PhantomGGAPIClient",
		"SecretKey": "oobixJxopCRvWJHU5vj324R9uqsxcJVQcxsJHmUrcVLV7brwVULBzf2XpqVcd4nq",
		"AccessTokenLifetimeMinutes": 15,
		"RefreshTokenLifetimeDays": 7
	},
	"CookieSettings": {
		"RefreshTokenCookieName": "__Host-RefreshToken",
		"Domain": null,
		"Path": "/",
		"Secure": true,
		"HttpOnly": true
	},
	"EmailSettings": {
		"SmtpHost": "smtp.ethereal.email",
		"SmtpPort": 587,
		"UseSsl": false,
