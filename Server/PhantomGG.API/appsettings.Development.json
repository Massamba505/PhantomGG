{
	"Serilog": {
		"Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft.AspNetCore": "Warning",
				"Microsoft.AspNetCore.Hosting": "Warning",
				"Microsoft.AspNetCore.Mvc": "Warning",
				"Microsoft.AspNetCore.Routing": "Warning",
				"System": "Warning",
				"Microsoft": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
				}
			},
			{
				"Name": "Seq",
				"Args": {
					"serverUrl": "http://localhost:5341"
				}
			}
		],
		"Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
		"Properties": {
			"Application": "PhantomGG.API"
		}
	},
	"ConnectionStrings": {
		"PhantomDb": "Data Source=localhost\\SQLEXPRESS;Initial Catalog=PhantomGG;Integrated Security=True;Trust Server Certificate=True",
		"SeqServerUrl": "http://localhost:5341"
	},
	"AllowedHosts": "*",
	"JwtSettings": {
		"Issuer": "PhantomGGAPI",
		"Audience": "PhantomGGAPIClient",
		"SecretKey": "REPLACE_WITH_SECURE_KEY_FROM_ENVIRONMENT_VARIABLE",
		"AccessTokenLifetimeMinutes": 15,
		"RefreshTokenLifetimeDays": 7
	},
	"CookieSettings": {
		"RefreshTokenCookieName": "__Host-RefreshToken",
		"Domain": null,
		"Path": "/",
		"Secure": true,
		"HttpOnly": true
	},
	"EmailSettings": {
		"SmtpHost": "smtp.ethereal.email",
		"SmtpPort": 587,
		"UseSsl": false,
		"Username": "amara.gorczany@ethereal.email",
		"Password": "REPLACE_WITH_EMAIL_PASSWORD_FROM_ENVIRONMENT_VARIABLE",
		"FromEmail": "amara.gorczany@ethereal.email",
		"FromName": "PhantomGG Support",
		"FrontendBaseUrl": "http://localhost:4200"
	},
	"StorageSettings": {
		"Provider": "LocalFile",
		"AzureStorageConnectionString": null,
		"BlobContainerName": "images"
	}
}
